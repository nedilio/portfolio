---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import ThemeToggle from "./ThemeToggle";
---

<header
  class="flex flex-col lg:flex-row justify-center lg:justify-between mb-4 shadow-md py-4 px-8"
>
  <h2 class="text-center dark:text-slate-50">
    {SITE_TITLE}
  </h2>
  <nav class="flex justify-between gap-x-3">
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/projects">Projects</HeaderLink>
    <!-- <HeaderLink href="/about">About</HeaderLink> -->
    <HeaderLink href="https://twitter.com/nedilio" target="_blank">
      Twitter
    </HeaderLink>
    <HeaderLink href="https://github.com/nedilio" target="_blank">
      GitHub
    </HeaderLink>
    <div class="w-4 h-4">
      <div class="bg-violet-300 w-6 h-6 absolute z-0 rounded-full"></div>
      <ThemeToggle client:only />
    </div>
  </nav>
</header>
